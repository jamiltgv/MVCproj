@model MyMVC.Models.People

@{
    ViewData["Title"] = "Edit Employee";
}

<style>
    .add-button {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        margin-top: 30px;
    }
</style>

<div class="title">
    <h1>Edit employee info</h1>
</div>

<div class="inputs">
    <form asp-controller="management" asp-action="updemp" asp-route-id="@Model.Id" method="post">
        <label asp-for="Name" class="input-label">Full Name</label>
        <input asp-for="Name" class="input-field" />

        <label asp-for="Age" class="input-label">Age</label>
        <input asp-for="Age" class="input-field" />

        <label asp-for="Role" class="input-label">Role</label>
        <input asp-for="Role" class="input-field" />

        <label asp-for="Email" class="input-label">Email</label>
        <input asp-for="Email" class="input-field" placeholder="email@example.com" />

        <div class="text-center">
            <button type="submit" class="button-4">Save</button>
        </div>
    </form>
</div>
