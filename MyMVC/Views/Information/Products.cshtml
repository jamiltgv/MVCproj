@model List<MyMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<style>
    .products-list {
        background-color: #DDE3E9;
        display: flex;
        justify-content: center;
        width: fit-content;
        padding: 25px;
        margin-top: 35px;
        border: 1px solid lightgrey;
        border-radius: 15px;
    }

    .pnames {
        font-size: 40px;
    }
</style>
<div>
    <h1>Products List</h1>
    <div class="products-list">
    <ol method="post">
            @if (Model != null)
            {
                foreach (var p in Model)
                {
                    <li class="pnames">@p.Name - @p.Category</li>
                }
            }
            else
            {
                <p class="pnames">Model is NULL</p>
            }
    </ol>
    </div>
</div>
