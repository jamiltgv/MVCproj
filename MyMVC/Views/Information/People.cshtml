@model List<MyMVC.Models.People>

@{
    ViewData["Title"] = "People";
}

<style>
    .people-list{
        background-color: #DDE3E9;
        display:flex;
        justify-content: center;
        width: fit-content;
        padding: 25px;
        margin-top: 35px;
        border: 1px solid lightgrey;
        border-radius: 15px;
    }

    .pnames{
        font-size: 40px;
    }
</style>

<div>
    <h1>People List</h1>
    <div class="people-list">
        <ol method="post">
                @if (Model != null)
                {
                    foreach (var c in Model)
                    {
                         <li class="pnames">@c.FullName, @c.Age y.o. - @c.Role</li>
                    }
                }
                else
                {
                    <p class="pnames">Model is NULL</p>
                }
            </ol>
    </div>
</div>